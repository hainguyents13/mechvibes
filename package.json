{
  "name": "mechvibes",
  "productName": "Mechvibes",
  "version": "v2.3.5",
  "description": "Play mechanical keyboard sounds as you type.",
  "repository": "https://github.com/hainguyents13/mechvibes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:all": "electron-builder -wml",
    "build:win": "electron-builder -w",
    "build:mac": "electron-builder -m",
    "build:linux": "electron-builder -l",
    "build:clean": "node tools/clean-dist.js"
  },
  "keywords": [],
  "homepage": "https://mechvibes.com",
  "author": {
    "name": "Hai Nguyen",
    "email": "hainguyen.ts13@gmail.com"
  },
  "license": "MIT",
  "iohook": {
    "targets": [
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "./build/installer.nsh"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "easy-volume": "^1.1.0",
    "electron-fetch": "^1.9.1",
    "electron-log": "^4.4.8",
    "electron-store": "^6.0.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "howler": "^2.2.4",
    "iohook": "^0.9.3",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "electron": "^12.2.3",
    "electron-builder": "^23.6.0"
  }
}
